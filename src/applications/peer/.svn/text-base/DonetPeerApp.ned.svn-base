package simpleoverlay.applications.peer;

import inet.applications.udpapp.UDPBasicApp;
import simpleoverlay.applications.peer.DonetPeer;
import simpleoverlay.applications.common.VideoBuffer;
import simpleoverlay.applications.common.PartnerList;

module DonetPeerApp
{
    parameters:
        @display("i=block/app;bgb=250,186");

        int videoStreamBitRate @unit(bps) = default(300kbps);
        int chunkSize @unit(byte) = default(1250B);
        int bufferMapSize @unit(s) = default(120s);

    gates:
        input udpIn;
        output udpOut;

    submodules:
        donetPeer: DonetPeer;
        videoBuffer: VideoBuffer {
            @display("p=67,38");
        }
        partnerList: PartnerList {

            @display("p=67,116");
        }
    connections:
        donetPeer.udpOut --> udpOut;
        donetPeer.udpIn <-- udpIn;
}

